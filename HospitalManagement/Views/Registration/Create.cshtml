@model HospitalManagement.Models.MedicalRecord

@{
    ViewData["Title"] = "Create";
}


<h3>Tạo phác đồ điều trị</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Createa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-size : 35px">
                <label class="control-label">Bệnh nhân</label>
                <a>@ViewBag.PatientName</a>
                <input type="hidden" name="patientId" value="@ViewBag.PatientId" />
            </div>
            <div class="form-group">
                <label class="control-label">Chuẩn đoán</label>
                @* <label asp-for="Diagnosis" class="control-label"></label> *@
                <input name="diagnosis" class="form-control" />
                @* <span asp-validation-for="Diagnosis" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label class="control-label">Đơn thuốc</label>
                <input name="prescription" class="form-control" />
                @* <span asp-validation-for="Prescription" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label class="control-label">Liều lượng</label>
                <input name="instructions" class="form-control" />
                @* <span asp-validation-for="Prescription" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label class="control-label">Sức khỏe</label>
                <input name="status" class="form-control" />
                @* <span asp-validation-for="Notes" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label class="control-label">Ghi chú</label>
                <input name="note" class="form-control" />
                @* <span asp-validation-for="Notes" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

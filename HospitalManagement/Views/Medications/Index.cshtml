@model IEnumerable<HospitalManagement.Models.Medication>

@{
    ViewData["Title"] = "Danh Sách Thuốc";
}

<h2>Danh Sách Thuốc</h2>

<!-- Add Button -->
<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">Thêm Thuốc Mới</a>
</div>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label>Tìm kiếm:</label>
        <input name="searchTerm" class="form-control" placeholder="Nhập tên thuốc hoặc nhà sản xuất" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Tên Thuốc</th>
            <th>Liều Lượng</th>
            <th>Nhà Sản Xuất</th>
            <th>Giá</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MedicationName</td>
                <td>@item.Dosage</td>
                <td>@item.Manufacturer</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Cập Nhật</a>
                </td>
            </tr>
        }
    </tbody>
</table>